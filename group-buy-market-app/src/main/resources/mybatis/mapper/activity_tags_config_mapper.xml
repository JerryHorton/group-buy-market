<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cug.sxy.infrastructure.persistent.dao.IActivityTagConfigDao">

    <resultMap id="dataMap" type="cn.cug.sxy.infrastructure.persistent.po.ActivityTagsConfig">
        <id column="id" property="id"/>
        <result column="activity_id" property="activityId"/>
        <result column="tag_id" property="tagId"/>
        <result column="tag_scope" property="tagScope"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="queryActivityTagConfig" parameterType="java.lang.Long" resultMap="dataMap">
        select activity_id, tag_id, tag_scope
        from activity_tags_config
        where activity_id = #{activityId}
    </select>

</mapper>
